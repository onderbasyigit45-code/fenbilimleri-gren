<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>AI Öğrenim Asistanı - Fen Platformu</title>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/css/style.css">
</head>
<body>
    <header>
        <nav class="container">
            <div class="logo">
                <i class="fas fa-flask"></i> Fen Platformu
            </div>
            <ul class="nav-links">
                <li><a href="/">Ana Sayfa</a></li>
                <li><a href="/konular/fizik">Dersler</a></li>
                <li><a href="#" class="active">AI Asistan</a></li>
            </ul>
        </nav>
    </header>

    <main class="container">
        <div class="ai-page">
            <div class="ai-header fade-in">
                <h1><i class="fas fa-robot"></i> AI Öğrenim Asistanı</h1>
                <p>Fen bilimleri hakkında sorularınızı anında yanıtlayın, konuları derinlemesine öğrenin</p>
            </div>

            <div class="ai-content">
                <div class="chat-section">
                    <div class="ai-chat">
                        <div class="chat-header">
                            <div class="ai-info">
                                <div class="ai-avatar">
                                    <i class="fas fa-robot"></i>
                                </div>
                                <div class="ai-details">
                                    <h3>Fen AI Asistan</h3>
                                    <span class="status online">Çevrimiçi</span>
                                </div>
                            </div>
                            <div class="chat-actions">
                                <button class="btn-icon" onclick="clearChat()" title="Sohbeti Temizle">
                                    <i class="fas fa-broom"></i>
                                </button>
                                <button class="btn-icon" onclick="toggleSettings()" title="Ayarlar">
                                    <i class="fas fa-cog"></i>
                                </button>
                            </div>
                        </div>

                        <div class="chat-messages" id="chat-messages">
                            <div class="message ai-message fade-in">
                                <div class="message-avatar">
                                    <i class="fas fa-robot"></i>
                                </div>
                                <div class="message-content">
                                    <p>Merhaba! Ben Fen Platformu AI asistanıyım. Fizik, kimya, biyoloji, astronomi ve jeoloji hakkında her türlü sorunuz için buradayım. Size nasıl yardımcı olabilirim?</p>
                                    <div class="quick-suggestions">
                                        <button class="suggestion-btn" onclick="sendSuggestion('Fotosentez nasıl çalışır?')">
                                            <i class="fas fa-leaf"></i> Fotosentez nasıl çalışır?
                                        </button>
                                        <button class="suggestion-btn" onclick="sendSuggestion('E=mc² denklemi ne anlama geliyor?')">
                                            <i class="fas fa-atom"></i> E=mc² denklemi
                                        </button>
                                        <button class="suggestion-btn" onclick="sendSuggestion('Kara delikler nedir?')">
                                            <i class="fas fa-circle"></i> Kara delikler
                                        </button>
                                        <button class="suggestion-btn" onclick="sendSuggestion('DNA yapısı hakkında bilgi ver')">
                                            <i class="fas fa-dna"></i> DNA yapısı
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="chat-input-container">
                            <div class="chat-input">
                                <button class="btn-icon" onclick="attachFile()" title="Dosya Ekle">
                                    <i class="fas fa-paperclip"></i>
                                </button>
                                <input 
                                    type="text" 
                                    id="message-input" 
                                    placeholder="Sorunuzu yazın..."
                                    onkeypress="handleKeyPress(event)"
                                >
                                <button class="btn-icon" onclick="sendVoiceMessage()" title="Sesli Mesaj">
                                    <i class="fas fa-microphone"></i>
                                </button>
                                <button class="btn-primary send-btn" onclick="sendMessage()">
                                    <i class="fas fa-paper-plane"></i>
                                </button>
                            </div>
                            <div class="input-features">
                                <span class="feature-hint">
                                    <i class="fas fa-lightbulb"></i> 
                                    Matematik formülleri için LaTeX kullanabilirsiniz: \(E = mc^2\)
                                </span>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="ai-sidebar">
                    <div class="capabilities-card">
                        <h3><i class="fas fa-star"></i> Yeteneklerim</h3>
                        <ul class="capabilities-list">
                            <li><i class="fas fa-check-circle"></i> Konu anlatımı</li>
                            <li><i class="fas fa-check-circle"></i> Problem çözümü</li>
                            <li><i class="fas fa-check-circle"></i> Formül açıklamaları</li>
                            <li><i class="fas fa-check-circle"></i> Deney önerileri</li>
                            <li><i class="fas fa-check-circle"></i> Sınav hazırlığı</li>
                            <li><i class="fas fa-check-circle"></i> Ödev yardımı</li>
                        </ul>
                    </div>

                    <div class="topics-card">
                        <h3><i class="fas fa-book"></i> Popüler Konular</h3>
                        <div class="topic-tags">
                            <span class="topic-tag" onclick="searchTopic('Kuvvet')">Kuvvet</span>
                            <span class="topic-tag" onclick="searchTopic('Enerji')">Enerji</span>
                            <span class="topic-tag" onclick="searchTopic('Atom')">Atom</span>
                            <span class="topic-tag" onclick="searchTopic('Hücre')">Hücre</span>
                            <span class="topic-tag" onclick="searchTopic('Genetik')">Genetik</span>
                            <span class="topic-tag" onclick="searchTopic('Evrim')">Evrim</span>
                            <span class="topic-tag" onclick="searchTopic('Galaksi')">Galaksi</span>
                            <span class="topic-tag" onclick="searchTopic('Jeoloji')">Jeoloji</span>
                        </div>
                    </div>

                    <div class="stats-card">
                        <h3><i class="fas fa-chart-bar"></i> İstatistikler</h3>
                        <div class="stat-grid">
                            <div class="stat-item">
                                <span class="stat-number">1,234</span>
                                <span class="stat-label">Soru Cevaplandı</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">98%</span>
                                <span class="stat-label">Başarı Oranı</span>
                            </div>
                            <div class="stat-item">
                                <span class="stat-number">24/7</span>
                                <span class="stat-label">Hizmet</span>
                            </div>
                        </div>
                    </div>

                    <div class="help-card">
                        <h3><i class="fas fa-question-circle"></i> Yardım</h3>
                        <p>AI asistanımızdan en iyi şekilde faydalanmak için:</p>
                        <ul>
                            <li>Sorularınızı net ve açık bir şekilde ifade edin</li>
                            <li>Spesifik konular hakkında sorun</li>
                            <li>Örnekler vererek daha iyi yanıtlar alın</li>
                            <li>Takıldığınız yerde sormaktan çekinmeyin</li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </main>

    <style>
        .ai-page {
            max-width: 1400px;
            margin: 0 auto;
        }

        .ai-header {
            text-align: center;
            margin-bottom: 2rem;
            padding: 2rem;
            background: var(--card-bg);
            border-radius: var(--radius);
            box-shadow: var(--shadow-md);
        }

        .ai-header h1 {
            font-size: 2.5rem;
            margin-bottom: 1rem;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .ai-content {
            display: grid;
            grid-template-columns: 1fr 350px;
            gap: 2rem;
        }

        .chat-section {
            background: var(--card-bg);
            border-radius: var(--radius);
            box-shadow: var(--shadow-lg);
            overflow: hidden;
        }

        .chat-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 1.5rem;
            border-bottom: 1px solid var(--border-color);
            background: var(--light-bg);
        }

        .ai-info {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .ai-avatar {
            width: 50px;
            height: 50px;
            background: linear-gradient(135deg, var(--primary-color), var(--secondary-color));
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 1.5rem;
        }

        .ai-details h3 {
            margin: 0;
            font-size: 1.2rem;
        }

        .status.online {
            color: var(--success-color);
            font-size: 0.9rem;
        }

        .status.online::before {
            content: '● ';
        }

        .chat-actions {
            display: flex;
            gap: 0.5rem;
        }

        .btn-icon {
            width: 40px;
            height: 40px;
            border: none;
            background: var(--card-bg);
            border-radius: 50%;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            transition: all 0.3s ease;
            color: var(--text-secondary);
        }

        .btn-icon:hover {
            background: var(--primary-color);
            color: white;
        }

        .chat-messages {
            height: 500px;
            overflow-y: auto;
            padding: 1.5rem;
            background: var(--light-bg);
        }

        .message {
            display: flex;
            gap: 1rem;
            margin-bottom: 1.5rem;
        }

        .message-avatar {
            width: 35px;
            height: 35px;
            background: var(--primary-color);
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
            color: white;
            font-size: 0.9rem;
            flex-shrink: 0;
        }

        .user-message .message-avatar {
            background: var(--secondary-color);
        }

        .message-content {
            flex: 1;
        }

        .user-message {
            flex-direction: row-reverse;
        }

        .user-message .message-content {
            text-align: right;
        }

        .message-content p {
            background: var(--card-bg);
            padding: 1rem;
            border-radius: var(--radius);
            margin: 0;
            line-height: 1.6;
        }

        .user-message .message-content p {
            background: var(--primary-color);
            color: white;
        }

        .quick-suggestions {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
            margin-top: 1rem;
        }

        .suggestion-btn {
            padding: 0.5rem 1rem;
            border: 1px solid var(--border-color);
            background: var(--card-bg);
            border-radius: 20px;
            cursor: pointer;
            font-size: 0.9rem;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            gap: 0.5rem;
        }

        .suggestion-btn:hover {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .chat-input-container {
            padding: 1.5rem;
            border-top: 1px solid var(--border-color);
            background: var(--card-bg);
        }

        .chat-input {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            background: var(--light-bg);
            border: 2px solid var(--border-color);
            border-radius: 25px;
            padding: 0.5rem;
        }

        .chat-input input {
            flex: 1;
            border: none;
            background: none;
            padding: 0.75rem;
            font-size: 1rem;
            outline: none;
        }

        .chat-input input:focus {
            outline: none;
        }

        .send-btn {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .input-features {
            margin-top: 0.5rem;
            font-size: 0.85rem;
            color: var(--text-secondary);
        }

        .ai-sidebar {
            display: flex;
            flex-direction: column;
            gap: 1.5rem;
        }

        .capabilities-card,
        .topics-card,
        .stats-card,
        .help-card {
            background: var(--card-bg);
            border-radius: var(--radius);
            padding: 1.5rem;
            box-shadow: var(--shadow-md);
        }

        .capabilities-card h3,
        .topics-card h3,
        .stats-card h3,
        .help-card h3 {
            margin-bottom: 1rem;
            color: var(--text-primary);
        }

        .capabilities-list {
            list-style: none;
            padding: 0;
        }

        .capabilities-list li {
            display: flex;
            align-items: center;
            gap: 0.5rem;
            padding: 0.5rem 0;
            color: var(--text-secondary);
        }

        .capabilities-list i {
            color: var(--success-color);
        }

        .topic-tags {
            display: flex;
            flex-wrap: wrap;
            gap: 0.5rem;
        }

        .topic-tag {
            padding: 0.4rem 0.8rem;
            background: var(--light-bg);
            border: 1px solid var(--border-color);
            border-radius: 15px;
            font-size: 0.85rem;
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .topic-tag:hover {
            background: var(--primary-color);
            color: white;
            border-color: var(--primary-color);
        }

        .stat-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 1rem;
            text-align: center;
        }

        .stat-item {
            padding: 1rem;
            background: var(--light-bg);
            border-radius: var(--radius);
        }

        .stat-number {
            display: block;
            font-size: 1.5rem;
            font-weight: 700;
            color: var(--primary-color);
        }

        .stat-label {
            font-size: 0.8rem;
            color: var(--text-secondary);
        }

        .help-card ul {
            padding-left: 1.5rem;
            color: var(--text-secondary);
        }

        .help-card li {
            margin-bottom: 0.5rem;
        }

        @media (max-width: 1024px) {
            .ai-content {
                grid-template-columns: 1fr;
            }
            
            .ai-sidebar {
                display: grid;
                grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
                gap: 1rem;
            }
        }

        @media (max-width: 768px) {
            .ai-header h1 {
                font-size: 2rem;
            }
            
            .chat-messages {
                height: 400px;
            }
            
            .stat-grid {
                grid-template-columns: 1fr;
            }
        }
    </style>

    <script>
        // Socket.io bağlantısı
        const socket = io();

        function sendMessage() {
            const input = document.getElementById('message-input');
            const message = input.value.trim();
            
            if (message) {
                addUserMessage(message);
                socket.emit('ai-question', { question: message });
                input.value = '';
                addLoadingMessage();
            }
        }

        function addUserMessage(message) {
            const messagesContainer = document.getElementById('chat-messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message user-message fade-in';
            messageDiv.innerHTML = `
                <div class="message-avatar">
                    <i class="fas fa-user"></i>
                </div>
                <div class="message-content">
                    <p>${message}</p>
                </div>
            `;
            messagesContainer.appendChild(messageDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        function addAIMessage(message) {
            removeLoadingMessage();
            const messagesContainer = document.getElementById('chat-messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message ai-message fade-in';
            messageDiv.innerHTML = `
                <div class="message-avatar">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="message-content">
                    <p>${message}</p>
                </div>
            `;
            messagesContainer.appendChild(messageDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        function addLoadingMessage() {
            const messagesContainer = document.getElementById('chat-messages');
            const messageDiv = document.createElement('div');
            messageDiv.className = 'message ai-message fade-in';
            messageDiv.innerHTML = `
                <div class="message-avatar">
                    <i class="fas fa-robot"></i>
                </div>
                <div class="message-content">
                    <p><span class="loading"></span> Yapay zeka düşünüyor...</p>
                </div>
            `;
            messageDiv.id = 'loading-message';
            messagesContainer.appendChild(messageDiv);
            messagesContainer.scrollTop = messagesContainer.scrollHeight;
        }

        function removeLoadingMessage() {
            const loadingMessage = document.getElementById('loading-message');
            if (loadingMessage) {
                loadingMessage.remove();
            }
        }

        function sendSuggestion(suggestion) {
            document.getElementById('message-input').value = suggestion;
            sendMessage();
        }

        function searchTopic(topic) {
            document.getElementById('message-input').value = `${topic} hakkında bilgi verir misin?`;
            sendMessage();
        }

        function clearChat() {
            if (confirm('Sohbet geçmişi temizlensin mi?')) {
                const messagesContainer = document.getElementById('chat-messages');
                messagesContainer.innerHTML = `
                    <div class="message ai-message fade-in">
                        <div class="message-avatar">
                            <i class="fas fa-robot"></i>
                        </div>
                        <div class="message-content">
                            <p>Sohbet temizlendi. Yeni başlamak ister misiniz?</p>
                        </div>
                    </div>
                `;
            }
        }

        function toggleSettings() {
            alert('Ayarlar sayfası yakında eklenecek!');
        }

        function attachFile() {
            alert('Dosya ekleme özelliği yakında eklenecek!');
        }

        function sendVoiceMessage() {
            alert('Sesli mesaj özelliği yakında eklenecek!');
        }

        function handleKeyPress(event) {
            if (event.key === 'Enter' && !event.shiftKey) {
                event.preventDefault();
                sendMessage();
            }
        }

        // Socket event listeners
        socket.on('ai-response', (data) => {
            addAIMessage(data.answer);
        });

        // Sayfa yüklendiğinde input'a focus
        document.addEventListener('DOMContentLoaded', () => {
            document.getElementById('message-input').focus();
        });
    </script>

    <script src="/js/main.js"></script>
</body>
</html>
